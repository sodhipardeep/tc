
version: 2
jobs:
  build:
    machine:
        environment:
       image: circleci/classic:latest
    steps:
      - checkout
      - run:
          command: ./.circleci/setup.sh
      - run:
          command: ./.circleci/edit.sh
      - run:
          command: ls -al
      - run:
          name: Creating aws instance
          command: sudo aws ec2 run-instances   --image-id ami-188fba77 --key-name testkey --security-groups test-sg --instance-type t2.micro --placement AvailabilityZone=ap-south-1a --block-device-mappings DeviceName=/dev/sdh,Ebs={VolumeSize=100} --count 1
